<h1>List All Admins</h1>
<table style="width:40%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listadmins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= link_to 'Remove Admin', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>