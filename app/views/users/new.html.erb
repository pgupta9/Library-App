<% provide(:title, 'Sign up') %>
<% if ((logged_in? && !logged_student?)) %>
      <h1>Create new Admins</h1>
<% else %>
      <h1>Sign up</h1>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if ((logged_in? && !logged_student?) || !logged_in?) %>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <div class="control-group">
        <%= f.label :role, class: 'control-label' %><br>
          <div class = "controls">
            <% if (logged_admin?) %>
            <%= f.select(:role, options_for_select([['student','student'],['admin','admin']]))%>
            <% else %>
            <%= f.select(:role, options_for_select([['student','student']]))%>
            <% end %>
          </div>
      </div>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <% else %>
      <h2>Please logout for creating a user</h2>
    <% end %>
  </div>
</div>